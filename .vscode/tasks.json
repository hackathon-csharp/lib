{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build datapack demo",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O0",
                "-g",
                "${workspaceFolder}/example.cpp",
                "-o",
                "${workspaceFolder}/datapack_demo"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
